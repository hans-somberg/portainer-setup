version: '3.1'

services:
  mariadb:
    image: mariadb
    restart: always
    environment:
      MARIADB_ROOT_PASSWORD: developer
    networks:
      - backend

  phpmyadmin:
    container_name: my-web-container
    image: phpmyadmin
    restart: unless-stopped
    ports:
      - 8080:80
    environment:
      - PMA_HOST=mariadb
    networks:
      - backend

networks:
  backend:
    driver: bridge
